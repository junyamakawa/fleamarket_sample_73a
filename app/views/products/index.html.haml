.productlists
  - @products.each do |product|
    .productlists__productlist
      =link_to product_path(product.id) do
        .productlist--img
          - first_image = product.images.first
          = image_tag first_image.src.url, :size =>'220', class: "img"
        .productlist--body
          .productlist--body__name
            =product.name
          .productlist--body__details
            %ul
              %li=product.price
